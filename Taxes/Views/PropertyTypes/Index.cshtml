@model IEnumerable<Taxes.Models.PropertyType>

@{
    ViewBag.Title = "Property Types";
}

<h2>Property Types</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PropertyTypeId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.PropertyTypeId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.PropertyTypeId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
