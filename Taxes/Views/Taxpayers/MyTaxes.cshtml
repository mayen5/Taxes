@model Taxes.Models.TaxpayerWithTotal

@{
    ViewBag.Title = "My Taxes";
}

<h2>My Taxes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Department.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Municipality.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().PropertyType.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Stratum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxpayer.Properties.FirstOrDefault().Value)
        </th>
    </tr>

    @foreach (var item in Model.Taxpayer.Properties.ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Municipality.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyType.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stratum)
            </td>
            <td align="right">
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td align="right">
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        </tr>
    }
    <tr>
        <td colspan="7" align="right">
            <strong>@Html.DisplayNameFor(model => model.Total)</strong>
        </td>
        <td align="right">
            <strong>@Html.DisplayFor(model => model.Total)</strong>
        </td>
    </tr>

</table>
